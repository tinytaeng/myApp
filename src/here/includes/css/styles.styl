// Layout
#features
  text-align center
  img
    margin 0 0 20px

#inputMessage
  margin-bottom 15px

footer
  background #333
  color #eee
  font-size 11px
  padding 20px

//Typography
body
  -webkit-font-smoothing antialiased
  text-rendering optimizelegibility

.well
  margin 20px 0
  .page-header
    margin-top 0
    h1
      margin-top 0

ul
  &.unstyled
    list-style none
    padding 0


//Navbar
#searchInput
  width 200px

.navbar-brand
  padding 13px 15px


//Carousel
#myCarousel
  margin-top 60px
  .item
    height 400px

.carousel-caption
  font-size 24px
  font-size 16px
  h4
    font-size 32px
    font-size 22px

#slide1
  background url('../../images/carousel_medium_01.jpg') top center no-repeat
  background url('../../images/carousel_small_01.jpg') top center no-repeat
  background url('../../images/carousel_large_01.jpg') top center no-repeat

#slide2
  background url('../../images/carousel_medium_02.jpg') top center no-repeat
  background url('../../images/carousel_small_02.jpg') top center no-repeat
  background url('../../images/carousel_large_02.jpg') top center no-repeat

#slide3
  background url('../../images/carousel_medium_03.jpg') top center no-repeat
  background url('../../images/carousel_small_03.jpg') top center no-repeat
  background url('../../images/carousel_large_03.jpg') top center no-repeat


//Global Styles
.alert
  margin-top 20px
  display none

.tabbable
  img
    &.thumbnail
      margin 0 20px 10px 0

.thumbnails
  margin 20px 0

.thumbnail
  position relative
  h3
    font-size 16px
    margin 0 0 10px
    line-height 20px
  .price
    font-size 22px
    position absolute
    top -10px
    right -10px
    padding 10px
    sup
      font-weight normal
      font-size 12px
      font-size 10px
  span
    &.glyphicon
      margin-right 5px

//Media Queries
//--Portrait & landscape phone
@media (max-width: 480px)
  .thumbnail .price
    font-size 14px
    sup
      font-size 10px

@media (max-width: 768px)
  #myCarousel .item
    height 310px
  #slide1
    background url('../../images/carousel_small_01.jpg') top center no-repeat
  #slide2
    background url('../../images/carousel_small_02.jpg') top center no-repeat
  #slide3
    background url('../../images/carousel_small_03.jpg') top center no-repeat
  .carousel-caption
    font-size 16px
    h4
      font-size 22px

@media (min-width: 1200px)
  #myCarousel .item
    height 500px
  #slide1
    background url('../../images/carousel_large_01.jpg') top center no-repeat
  #slide2
    background url('../../images/carousel_large_02.jpg') top center no-repeat
  #slide3
    background url('../../images/carousel_large_03.jpg') top center no-repeat

